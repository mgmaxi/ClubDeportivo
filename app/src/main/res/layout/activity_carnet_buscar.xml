<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarnetBuscar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCarnet"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="Carnet"/>

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circular_button"
            android:padding="6dp"
            android:src="@drawable/Exit"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_weight="1"
        android:background="@drawable/background_gradient"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPerson"
            android:layout_width="266dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#24507C"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/imageViewCardLogo"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:contentDescription="Logo"
                    app:srcCompat="@drawable/logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="Nombre Apellido"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCardDNI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="DNI"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/buscarSocioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="Buscar Socio"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dniEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:hint="Ingrese DNI Socio"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="189dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#63C37B"
            android:drawableTop="@drawable/iconMembershipCard"
            android:gravity="center"
            android:padding="8dp"
            android:text="Buscar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:elevation="4dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/btnBas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarHome"
            android:gravity="center"
            android:padding="10dp"
            android:text="Inicio"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnInscribir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarPersonAdd"
            android:gravity="center"
            android:padding="10dp"
            android:text="Inscribir"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnClases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarList"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Clases"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnPagos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarPayment"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pagos"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarExpirations"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Vencimientos"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>