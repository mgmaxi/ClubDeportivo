<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComprobantePago">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewComprobante"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="Comprobante de pago"/>

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circular_button"
            android:padding="6dp"
            android:src="@drawable/Exit"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_weight="1"
        android:background="@drawable/background_gradient"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="367dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="98dp"
                    android:layout_height="85dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Comprobante de pago"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/fechaPagoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Fecha de pago: 01/01/2025"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/totalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total. $15000.00"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/metodoPagoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Método de Pago: Tarjeta de Crrédito"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/comprobanteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="N° de comprobante: 0010"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btnImprimirEnviar"
            android:layout_width="189dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#63C37B"
            android:drawableTop="@drawable/iconMembershipCard"
            android:gravity="center"
            android:padding="8dp"
            android:text="Imprimir"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:elevation="4dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnBas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarHome"
            android:gravity="center"
            android:padding="10dp"
            android:text="Inicio"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnInscribir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarPersonAdd"
            android:gravity="center"
            android:padding="10dp"
            android:text="Inscribir"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnClases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarList"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Clases"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnPagos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarPayment"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pagos"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/iconNavbarExpirations"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Vencimientos"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
